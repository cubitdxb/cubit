<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="account_report_partner_ledger_report_view" model="ir.ui.view">
        <field name="name">Partner Ledger</field>
        <field name="model">wizard.partner.ledger</field>
        <field name="arch" type="xml">
             <form string="Statement Of Accounts (SOA)">
                 <group>
                     <group>
                         <field name="start_date"/>
                     </group>
                     <group>
                         <field name="end_date"/>
                     </group>
                 </group>
                 <group>
                     <field name="report_for"/>
                    <field name="partner_id" options="{'no_create': True}"/>
                 </group>
                    <footer>
                          <button name="print_report" string="Print" type="object"
                                  class="btn-primary"/>
                          <button string="Cancel" class="btn-default" special="cancel" />
                     </footer>
             </form>
        </field>
    </record>

    <record id="action_partner_ledger" model="ir.actions.act_window">
        <field name="name">Partner Ledger Print</field>
        <field name="res_model">wizard.partner.ledger</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>

        <field name="target">new</field>
    </record>

    <menuitem name="Partner Ledger"
              id="menu_partner_ledger" sequence="999999"
             parent="account.menu_finance_receivables"
              action="action_partner_ledger"/>
</data>

</odoo>
