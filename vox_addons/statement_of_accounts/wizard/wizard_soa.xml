<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="account_report_soa_report_view" model="ir.ui.view">
        <field name="name">Statement Of Accounts</field>
        <field name="model">wizard.soa</field>
        <field name="arch" type="xml">
             <form string="Statement Of Accounts (SOA)">
                 <group>
                     <group>
                         <field name="soa_date"/>
                     </group>

                 </group>
                  <group>
                    <field name="partner_id" options="{'no_create': True}"/>
                 </group>

                    <footer>
                          <button name="print_report" string="Print" type="object"
                                  class="btn-primary"/>
                          <button string="Cancel" class="btn-default" special="cancel" />
                     </footer>
             </form>
        </field>
    </record>

    <record id="action_statement_of_accounts" model="ir.actions.act_window">
        <field name="name">Statement Of Accounts</field>
        <field name="res_model">wizard.soa</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>

        <field name="target">new</field>
    </record>

    <menuitem name="Statement Of Accounts"
              id="menu_statement_of_Accounts" sequence="99999"
             parent="account.menu_finance_receivables"
              action="action_statement_of_accounts"/>
</data>

</odoo>
