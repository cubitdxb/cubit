<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_quotation_order" model="ir.actions.report">
        <field name="name">Quotation Order</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">report_templates.quotation_order1</field>
        <field name="report_file">report_templates.quotation_order1</field>
        <field name="print_report_name">'Quotation Order- %s' % (object.name).replace('/', '')</field>
        <field name="binding_model_id" ref="sale_management.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

    <record id="paperformat_contract_quotation_order" model="report.paperformat">
        <field name="name">Quotation Order</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">32</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">9</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">30</field>
        <field name="dpi">90</field>
    </record>
    <record id="action_report_quotation_order" model="ir.actions.report">
        <field name="paperformat_id" ref="report_templates.paperformat_contract_quotation_order"/>
    </record>


